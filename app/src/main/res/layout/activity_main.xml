<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:background="#FF79C3FC">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não tem uma conta?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.8"/>
    <TextView
            android:text="Cadastre-se aqui!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="589dp"
            tools:layout_editor_absoluteX="149dp" android:id="@+id/textView" android:textColor="#fff"
            android:textStyle="bold"/>
    <Button
            android:text="Entrar"
            android:layout_width="370dp"
            android:layout_height="45dp" tools:layout_editor_absoluteY="408dp"
            tools:layout_editor_absoluteX="20dp" android:id="@+id/button" android:background="#FF036194"
            android:textColor="#ffffff"/>
    <EditText
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteY="303dp" tools:layout_editor_absoluteX="20dp" android:id="@+id/editText"
            android:text="E-mail" android:selectAllOnFocus="false" android:singleLine="true" tools:paddingLeft="10dp"
            tools:background="#fff"/>
    <TextView
            android:text="Faça login para continuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="259dp"
            tools:layout_editor_absoluteX="90dp" android:id="@+id/textView2" android:textSize="20sp"/>
    <EditText
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="355dp" tools:layout_editor_absoluteX="20dp" android:id="@+id/editText3"
            android:text="Senha" tools:background="#fff" tools:paddingLeft="10dp"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="49dp" app:srcCompat="@mipmap/ic_launcher_round"
            tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="181dp" android:id="@+id/imageView2"/>

</android.support.constraint.ConstraintLayout>